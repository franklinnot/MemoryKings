    font-size: 16px; /* Ajusta el tamaño de la fuente del textarea */
    border: 1px solid #ccc; /* Ajusta el borde del textarea */
    border-radius: 5px; /* Ajusta el radio de borde del textarea */
    resize: vertical; /* Permite redimensionar verticalmente el textarea si es necesario */
}

.modal-content .enviar-btn {
    margin-top: 20px; /* Espacio superior para separar el botón del textarea */
    padding: 10px 20px; /* Ajusta el padding del botón */
    font-size: 16px; /* Ajusta el tamaño de la fuente del botón */
    background-color: #09C46A; /* Color de fondo del botón */
    color: white; /* Color de texto del botón */
    border: none; /* Quita el borde del botón */
    border-radius: 5px; /* Ajusta el radio de borde del botón */
    cursor: pointer; /* Cambia el cursor al pasar sobre el botón */
    transition: background-color 0.3s ease; /* Transición suave para el color de fondo */
}

.modal-content .enviar-btn:hover {
    background-color: #07a055; /* Cambia el color de fondo al pasar sobre el botón */
}


